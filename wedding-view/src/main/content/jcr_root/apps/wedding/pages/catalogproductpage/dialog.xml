<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="cq:Dialog"
          height="500"
          title="Информация о клиенте"
          width="800"
          xtype="dialog">
    <listeners
            jcr:primaryType="nt:unstructured"
            beforeshow="function(dialog){PORTAL.modules.ProductInfo.loadDialogComponents(dialog);}"
            beforesubmit="function(dialog){PORTAL.modules.ProductInfo.submitDialog(dialog);}"/>
    <items
            jcr:primaryType="cq:Widget"
            xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <generalProperties
                    jcr:primaryType="cq:Panel"
                    title="Основное">
                <items jcr:primaryType="cq:WidgetCollection">
                    <brand
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Город"
                            itemID="property"
                            name="./Brand"
                            type="simpletext"
                            xtype="textfield"/>
                    <model
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Имя"
                            itemID="property"
                            name="./Model"
                            type="simpletext"
                            xtype="textfield"/>
                    <discription
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Description"
                            name="./discription"
                            type="simpletext"
                            xtype="textarea"/>
                </items>
            </generalProperties>
            <img
                    jcr:primaryType="cq:Widget"
                    cropParameter="./image/imageCrop"
                    ddGroups="[media]"
                    fileNameParameter="./image/fileName"
                    fileReferenceParameter="./image/fileReference"
                    mapParameter="./image/imageMap"
                    name="./image/file"
                    requestSuffix="/image.img.png"
                    rotateParameter="./image/imageRotate"
                    sizeLimit="100"
                    title="Image"
                    xtype="html5smartimage"/>
            <price
                    jcr:primaryType="cq:Widget"
                    title="Информация о цене"
                    xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <pricefrom
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Цена от"
                            name="./priceFrom"
                            xtype="textfield"/>
                    <priceto
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Цена до"
                            name="./priceTo"
                            xtype="textfield"/>
                </items>
            </price>
            <contatcs
                    jcr:primaryType="cq:Widget"
                    title="Контакты"
                    xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <properties
                            jcr:primaryType="cq:Widget"
                            name="./contacts"
                            orderable="{Boolean}true"
                            xtype="multifield">
                        <fieldConfig
                                jcr:primaryType="cq:Widget"
                                layout="hbox"
                                xtype="multifieldpanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <contactLabel
                                        jcr:primaryType="cq:Widget"
                                        text="Вид контакта"
                                        xtype="label"/>
                                <kind
                                        jcr:primaryType="cq:Widget"
                                        defaultValue="phone"
                                        width="200"
                                        key="typeSelection"
                                        type="select"
                                        baseCls="multipanel-selection"
                                        xtype="selection">
                                    <options jcr:primaryType="cq:WidgetCollection">
                                        <phone
                                                jcr:primaryType="nt:unstructured"
                                                text="Телефон"
                                                value="phone"/>
                                        <email
                                                jcr:primaryType="nt:unstructured"
                                                text="Почта"
                                                value="email"/>
                                        <website
                                                jcr:primaryType="cq:Widget"
                                                text="Вэб сайт"
                                                value="website"/>
                                        <vk
                                                jcr:primaryType="nt:unstructured"
                                                text="Вконтакте"
                                                value="vk"/>
                                        <facebook
                                                jcr:primaryType="nt:unstructured"
                                                text="Фэйсбук"
                                                value="facebook"/>
                                        <instagram
                                                jcr:primaryType="nt:unstructured"
                                                text="Инстаграм"
                                                value="instagram"/>
                                    </options>
                                </kind>
                                <contactvalueLabel
                                        jcr:primaryType="cq:Widget"
                                        text="Значение"
                                        xtype="label"/>
                                <contactvalue
                                        jcr:primaryType="cq:Widget"
                                        key="value"
                                        width="200"
                                        xtype="textfield"/>
                            </items>
                        </fieldConfig>
                    </properties>
                </items>
            </contatcs>
            <videos
                    jcr:primaryType="cq:Widget"
                    title="Ссылки на видео"
                    xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <columns
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Добавить ссылку"
                            name="./videoLinks"
                            orderable="{Boolean}false"
                            xtype="multifield">
                        <fieldConfig
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Адресс ссылки"
                                xtype="textfield"/>
                    </columns>
                </items>
            </videos>
            <advance
                    jcr:primaryType="cq:Widget"
                    title="Микроописание на странице категории"
                    xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <microdescription
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Микроописание"
                            name="./microdescription"
                            xtype="textarea"/>
                </items>
            </advance>
        </items>
    </items>
</jcr:root>
