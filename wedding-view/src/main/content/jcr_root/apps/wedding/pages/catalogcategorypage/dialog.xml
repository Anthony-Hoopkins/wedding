<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="cq:Dialog"
          height="600"
          title="Свойства категории"
          width="1700"
          xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <general
                jcr:primaryType="cq:Panel"
                title="Основные">
            <items jcr:primaryType="cq:WidgetCollection">
                <properties
                        jcr:primaryType="cq:Widget"
                        name="./properties"
                        orderable="{Boolean}true"
                        xtype="multifield">
                    <fieldConfig
                            jcr:primaryType="cq:Widget"
                            layout="hbox"
                            xtype="multifieldpanel">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <typeLabel
                                    jcr:primaryType="cq:Widget"
                                    text="Тип свойства"
                                    xtype="label"/>
                            <type
                                    jcr:primaryType="cq:Widget"
                                    defaultValue="simpletext"
                                    key="typeSelection"
                                    type="select"
                                    baseCls="multipanel-selection"
                                    xtype="selection">
                                <options jcr:primaryType="cq:WidgetCollection">
                                    <simpleText
                                            jcr:primaryType="nt:unstructured"
                                            text="Simple Text"
                                            value="simpletext"/>
                                    <numbers
                                            jcr:primaryType="nt:unstructured"
                                            text="Number"
                                            value="number"/>
                                    <boolean
                                            jcr:primaryType="cq:Widget"
                                            text="Number/Boolean"
                                            value="numberBoolean"/>
                                    <float
                                            jcr:primaryType="nt:unstructured"
                                            text="Float"
                                            value="float"/>
                                    <size
                                            jcr:primaryType="nt:unstructured"
                                            text="Size"
                                            value="size"/>
                                    <intervav
                                            jcr:primaryType="nt:unstructured"
                                            text="Interval"
                                            value="interval"/>
                                    <enum
                                            jcr:primaryType="cq:Widget"
                                            text="Enum"
                                            value="enum"/>
                                    <attitude
                                            jcr:primaryType="cq:Widget"
                                            text="Attitude"
                                            value="attitude"/>
                                </options>
                            </type>
                            <valueLabel
                                    jcr:primaryType="cq:Widget"
                                    text="Названия свойства"
                                    xtype="label"/>
                            <value
                                    jcr:primaryType="cq:Widget"
                                    key="valueSelection"
                                    width="300"
                                    xtype="textfield"/>
                            <unitsLabel
                                    jcr:primaryType="cq:Widget"
                                    text="Еденицы измерения"
                                    xtype="label"/>
                            <units
                                    jcr:primaryType="cq:Widget"
                                    key="units"
                                    width="50"
                                    xtype="textfield"/>
                            <excludeLabel
                                    jcr:primaryType="cq:Widget"
                                    text="Не включать сво-ва в фильтр"
                                    xtype="label"/>
                            <exclude
                                    jcr:primaryType="cq:Widget"
                                    key="exclude"
                                    width="30"
                                    type="checkbox"
                                    xtype="selection"/>
                            <microDescription
                                    jcr:primaryType="cq:Widget"
                                    text="Добавить в короткое описание"
                                    xtype="label"/>
                            <description
                                    jcr:primaryType="cq:Widget"
                                    key="microdescription"
                                    width="30"
                                    type="checkbox"
                                    xtype="selection"/>
                        </items>
                    </fieldConfig>
                </properties>
            </items>
        </general>
        <mainIcon
                jcr:primaryType="cq:Widget"
                cropParameter="./imageCrop"
                ddGroups="[media]"
                fileNameParameter="./fileName"
                fileReferenceParameter="./mainCategoryImage"
                mapParameter="./imageMap"
                name="./file"
                requestSuffix=".img.png"
                rotateParameter="./imageRotate"
                title="Основная картинка"
                xtype="html5smartimage"/>
        <smallIcon
                jcr:primaryType="cq:Widget"
                cropParameter="./imageCrop"
                ddGroups="[media]"
                fileNameParameter="./fileName"
                fileReferenceParameter="./smallCategoryImage"
                mapParameter="./imageMap"
                name="./file"
                requestSuffix=".img.png"
                rotateParameter="./imageRotate"
                title="Маленькая картинка"
                xtype="html5smartimage"/>
    </items>
</jcr:root>
