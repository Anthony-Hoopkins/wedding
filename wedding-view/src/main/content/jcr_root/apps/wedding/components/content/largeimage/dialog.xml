<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Large Image Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <image
                jcr:primaryType="cq:Widget"
                cropParameter="./imageCrop"
                ddGroups="[media]"
                fileNameParameter="./fileName"
                fileReferenceParameter="./fileReference"
                mapParameter="./imageMap"
                name="./file"
                requestSuffix=".img.png"
                rotateParameter="./imageRotate"
                title="Image"
                xtype="html5smartimage"/>
            <advance
                jcr:primaryType="cq:Panel"
                title="Контент">
                <items jcr:primaryType="cq:WidgetCollection">
                    <text
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Текст"
                        name="./text"
                        xtype="textarea"/>
                    <textalign
                        jcr:primaryType="cq:Widget"
                        defaultValue="center"
                        fieldLabel="Расположение текста"
                        name="./textalign"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <top-center
                                jcr:primaryType="nt:unstructured"
                                text="Top-Center"
                                value="top-center"/>
                            <bottom-center
                                jcr:primaryType="nt:unstructured"
                                text="Bottom-Center"
                                value="bottom-center"/>
                            <center
                                jcr:primaryType="nt:unstructured"
                                text="Center"
                                value="center"/>
                            <left-center
                                jcr:primaryType="nt:unstructured"
                                text="Left-Center"
                                value="left-center"/>
                            <left-bottom
                                jcr:primaryType="nt:unstructured"
                                text="Left-bottom"
                                value="left-bottom"/>
                            <left-top
                                jcr:primaryType="nt:unstructured"
                                text="Left-top"
                                value="left-top"/>
                            <right
                                jcr:primaryType="nt:unstructured"
                                text="Right-Center"
                                value="right-center"/>
                            <right-bottom
                                jcr:primaryType="nt:unstructured"
                                text="Right-bottom"
                                value="right-bottom"/>
                            <right-top
                                jcr:primaryType="nt:unstructured"
                                text="Right-top"
                                value="right-top"/>
                        </options>
                    </textalign>
                    <buttontitle
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Надпись на кнопке"
                        name="./buttontittle"
                        xtype="textfield"/>
                    <buttonalign
                        jcr:primaryType="cq:Widget"
                        defaultValue="center"
                        fieldLabel="Расположение кнопки"
                        name="./buttonalign"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <top-center
                                jcr:primaryType="nt:unstructured"
                                text="Top-Center"
                                value="top-center"/>
                            <bottom-center
                                jcr:primaryType="nt:unstructured"
                                text="Bottom-Center"
                                value="bottom-center"/>
                            <center
                                jcr:primaryType="nt:unstructured"
                                text="Center"
                                value="center"/>
                            <left-center
                                jcr:primaryType="nt:unstructured"
                                text="Left-Center"
                                value="left-center"/>
                            <left-bottom
                                jcr:primaryType="nt:unstructured"
                                text="Left-bottom"
                                value="left-bottom"/>
                            <left-top
                                jcr:primaryType="nt:unstructured"
                                text="Left-top"
                                value="left-top"/>
                            <right
                                jcr:primaryType="nt:unstructured"
                                text="Right-Center"
                                value="right-center"/>
                            <right-bottom
                                jcr:primaryType="nt:unstructured"
                                text="Right-bottom"
                                value="right-bottom"/>
                            <right-top
                                jcr:primaryType="nt:unstructured"
                                text="Right-top"
                                value="right-top"/>
                        </options>
                    </buttonalign>
                    <path
                        jcr:primaryType="cq:Widget"
                        name="./path"
                        fieldLabel="Путь к картинке"
                        xtype="pathfield"/>
                </items>
            </advance>
        </items>
    </items>
</jcr:root>
